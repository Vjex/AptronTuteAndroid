<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f39">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#87c"
            android:gravity="center"
            android:text="DETAIL FORM"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#111" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text1"
                android:text="FIRST NAME:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit1"
                android:textSize="22sp"
                android:textStyle="bold"

                android:textColor="#ff9"
                android:hint="CHARAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text2"
                    android:text="LAST NAME:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edit2"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#ff9"
                    android:hint="SINGH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text3"
                android:text="FATHER'S NAME:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit3"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ff9"
                android:hint="XYZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text4"
                android:text="MOTHER'S NAME:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit4"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ff9"
                android:hint="XYZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text5"
                android:text="EMAIL:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit5"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ff9"
                android:inputType="textEmailAddress"
                android:hint="xyz@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text6"
                android:text="D.O.B.:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/edit6"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ff9"
                android:hint="dd/yy/mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text7"
                android:text="GENDER:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/radiog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M  "
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#ff9"/>
                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#ff9"/>
            </RadioGroup>


        </LinearLayout>

    </LinearLayout>

</ScrollView>